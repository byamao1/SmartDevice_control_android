<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativelayout_commonheader"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/devicelist_bg"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/button_commonheaderleft"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView_commonheadertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="标题"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button_commonheaderright"
            android:layout_width="42dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/device_titleinfo_bg_low" >

        <TextView
            android:id="@+id/textView_titleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:text="Large Text"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.90" >

        <ImageButton
            android:id="@+id/imageButton_plugSwitch"
            android:layout_width="135dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_weight="0.20" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_elecStatis"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1" />
                
                <TextView
                    android:id="@+id/textView_wifiEnhance"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1" />
                
                <TextView
                    android:id="@+id/textView_chargeProtect"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1" />
                
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="电量统计" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Wifi增强" />
                
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="充电保护" />

            </TableRow>
            
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                
                <TextView
                     android:id="@+id/textView4"
                     android:layout_width="match_parent"
                     android:layout_height="45dp" />
                
            </TableRow>   
                
                
             <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                 <TextView
                     android:id="@+id/textView_timerTask"
                     android:layout_width="match_parent"
                     android:layout_height="35dp"
                     android:layout_weight="1" />
                 
                 <TextView
                     android:id="@+id/textView_delayedTask"
                     android:layout_width="match_parent"
                     android:layout_height="35dp"
                     android:layout_weight="1" />
                 
                 <TextView
                     android:id="@+id/textView_nightLight"
                     android:layout_width="match_parent"
                     android:layout_height="35dp"
                     android:layout_weight="1" />

            </TableRow>
            
              <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                  <TextView
                      android:id="@+id/textView5"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:text="定时任务" />
                  
                  <TextView
                      android:id="@+id/textView22"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:text="延时任务" />
                  
                  <TextView
                      android:id="@+id/textView23"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:text="小夜灯" />

            </TableRow>
        </TableLayout>
    </RelativeLayout>

</LinearLayout>